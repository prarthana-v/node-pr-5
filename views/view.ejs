<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <style>
    body {
      font-family: "Arial", sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      color: #333;
    }
    .navbar {
      background-color: #2c3e50;
      padding: 1rem;
    }
    .navbar a {
      color: #ecf0f1;
      text-decoration: none;
      font-size: 1.5rem;
      margin-right: 1.5rem;
    }
    .container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    h1 {
      text-align: center;
      color: #34495e;
    }
    .card {
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 2rem;
      overflow: hidden;
      transition: transform 0.2s ease-in-out;
    }
    .card img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-bottom: 1px solid #ddd;
    }
    .card-body {
      padding: 1rem;
    }
    .card h5 {
      margin: 0;
      color: #34495e;
      font-size: 1.25rem;
    }
    .card p {
      color: #7f8c8d;
    }
    .btn {
      display: inline-block;
      padding: 0.5rem 1rem;
      margin-top: 0.5rem;
      border-radius: 4px;
      text-decoration: none;
      color: #fff;
      transition: background-color 0.2s ease-in-out;
    }
    .btn-primary {
      background-color: #3498db;
    }
    .btn-danger {
      background-color: #e74c3c;
    }
    .btn:hover {
      background-color: #2980b9;
    }
    .btn-danger:hover {
      background-color: #c0392b;
    }
    .add-movie-btn {
      background-color: #27ae60;
      text-align: center;
      padding: 1rem;
      border-radius: 50%;
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      width: 60px;
      height: 60px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2rem;
      color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      transition: background-color 0.2s ease-in-out;
    }
    .add-movie-btn:hover {
      background-color: #1e8449;
    }
    .card:hover {
      transform: translateY(-10px);
    }
    @media (min-width: 768px) {
      .card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .card img {
        height: 400px;
      }
    }
  </style>

  <body>
    <!-- Navbar -->
    <!-- <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">My Movie Site</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/add" class="add-movie-btn">Add New Movie</a>
            </li>
          </ul>
        </div>
      </div>
    </nav> -->
    <nav class="navbar">
      <a class="navbar-brand" href="#">My Movie Site</a>
      <a href="/add" class="btn btn-primary">Add New Movie</a>
    </nav>
    <!-- Main Content -->
    <div class="container mt-4">
      <h1 class="mb-4">Movies</h1>
      <div class="row">
        <!-- Movie Card Example -->

        <% movieList.map((val,i)=>{ %>
        <div class="col-md-4">
          <div class="card">
            <img
              src="<%= val.poster %>"
              class="card-img-top"
              alt="Movie Poster"
            />
            <div class="card-body">
              <h5 class="card-title"><%= val.title %></h5>
              <p class="card-text">Release Year: <%= val.year %></p>
              <a href="/edit?id=<%= val.id %>" class="btn btn-primary">Edit</a>
              <a href="/remove?id=<%= val.id %>" class="btn btn-danger"
                >Delete</a
              >
            </div>
          </div>
        </div>
        <%}) %>
        <!-- Repeat for each movie -->
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
